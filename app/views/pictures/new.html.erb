<h1>Add a picture</h1>

<%= link_to("Back to Pictures", "/pictures") %>

<%= form_for(@picture) do |f| %>
  <p>
    <%= f.label :artist %><br>
    <%= f.text_field :artist, placeholder: "Leonardo Da Vinci" %>
  </p>
  <p>
    <%= f.label :title %><br>
    <%= f.text_field :title, placeholder: "Mona Lisa" %>
  </p>
  <p>
    <%= f.label :url %><br>
    <%= f.text_field :url,  placeholder: "example @.com" %>

  </p>
  <p>
    <%= f.submit "Save" %>

  </p>


<% end %>


<% if @picture.errors.any? %>
  <ul>
    <% @picture.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
  </ul>
<% end %>
